<div class="container">
  <div class="row center sign-up-form">
    <div class="col s12 m12 l12">
      <div class="card-panel">
        <h3 class="center-align"> Log in </h3>
        <div class="row">
          <%= form_for :sessions, html: {class: "col s12"} do |f| %>
            <div class= "row">
              <div class="input-field col s12">
                <%= f.label :email %>
                <%= f.text_field :email, autofocus: true %>
              </div>
            </div>
            <div class= "row">
              <div class="input-field col s12">
                <%= f.label :password %>
                <%= f.password_field :password %>
              </div>
            </div>
            <%= f.button '<i class="material-icons right">send</i>Login'.html_safe, 
                class: "btn waves-effect waves-light right" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>